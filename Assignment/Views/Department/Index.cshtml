@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />

<h2>Total Number of Departments: <span class="badge bg-primary">@ViewBag.Count</span></h2>
<br />

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["Message"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="get" asp-action="Index">
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search By Name" name="SearchInput" value="@ViewBag.SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>
<br />
<br />

@if (Model.Any())
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                var departmentsList = Model.ToList();
                int start = ((int)ViewBag.CurrentPage - 1) * (int)ViewBag.PageSize;
                int end = start + (int)ViewBag.PageSize;
            }

            @for (int i = start; i < end && i < departmentsList.Count; i++)
            {
                var item = departmentsList[i];
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                var activeClass = (i == ViewBag.CurrentPage) ? "active" : "";
                <li class="page-item @activeClass">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-SearchInput="@ViewBag.SearchInput">@i</a>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are No Departments ):</h4>
    </div>
}
