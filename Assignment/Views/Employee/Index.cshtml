@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

<br />

<h2>Total Number of Employees: <span class="badge bg-primary">@ViewBag.Count</span></h2>

<br />

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["Message"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="get" asp-action="Index">
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search By Name" name="SearchInput" value="@ViewBag.SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create Employee</a>
<br />
<br />

@if (Model.Any())
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActivated</th>
                <th>IsDeleted</th>
                <th>Hiring Date</th>
                <th>Department</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                // convert to list of type IEnumrale 
                var employeesList = Model.ToList();
                int start = ((int)ViewBag.CurrentPage - 1) * (int)ViewBag.PageSize;
                int end = start + (int)ViewBag.PageSize;
            }

            @for (int i = start; i < end && i < employeesList.Count; i++)
            {
                var item = employeesList[i];
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActivated</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HiringDate</td>
                    <td>@if (item.Department is null)
                        {
                        <td> No Department </td>
                        }
                        else
                        {
                        <td> @item.Department.Name</td>
                        }
                    <td>
                            @*                           send id as info from index to details page to prevent invalid id problem
                *@           <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                var activeClass = (i == ViewBag.CurrentPage) ? "active" : "";
                <li class="page-item @activeClass">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-SearchInput="@ViewBag.SearchInput">@i</a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are No Employees ):</h4>
    </div>
}
