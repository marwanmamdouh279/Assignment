<div>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            var activeClass = (i == ViewBag.CurrentPage) ? "active" : "";
            <li class="page-item @activeClass">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-SearchInput="@ViewBag.SearchInput">@i</a>
            </li>
        }
    </ul>
</div>